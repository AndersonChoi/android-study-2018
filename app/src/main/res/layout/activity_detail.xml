<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_kakao_share"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="kakao talk 공유하기" />

    <TextView
        android:id="@+id/textview_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_kakao_share"
        android:layout_margin="20dp"
        android:text="원영집입니다! Philips hue로 집 조명을 꾸며봤어요."
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/textview_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/wonyoung_home" />

</RelativeLayout>